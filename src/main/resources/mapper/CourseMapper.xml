<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itcast.education.mapper.CourseMapper">
    <!--公共查询-->
    <sql id="baseSelect">
        SELECT ec.course_id,
            ec.course_name,
            ec.tags,
            ec.course_price,
            ec.discount_price,
            ec.sale_course,
            ec.course_url
        FROM education_course ec
    </sql>
    <!--结果集映射-->
    <resultMap id="baseMap" type="com.itcast.education.model.course.Course">
        <id column="course_id" jdbcType="VARCHAR" property="courseId"/>
        <result column="course_name" jdbcType="VARCHAR" property="courseName"/>
        <result column="tags" jdbcType="VARCHAR" property="tags"/>
        <result column="course_price" jdbcType="DECIMAL" property="coursePrice"/>
        <result column="discount_price" jdbcType="DECIMAL" property="discountPrice"/>
        <result column="sale_course" jdbcType="BIGINT" property="saleCourse"/>
        <result column="course_url" jdbcType="VARCHAR" property="courseUrl"/>
    </resultMap>
    <!--列表查询-->
    <select id="queryCourses" resultMap="baseMap">
        <include refid="baseSelect"/>
        <where>
            <if test="course != null">
                <if test="course.courseId != null and course.courseId != ''">
                    ec.course_id = #{course.courseId}
                </if>
                <if test="course.courseName != null and course.courseName != ''">
                    ec.course_name = #{course.courseName}
                </if>
            </if>
        </where>
        <if test="courseLimitNumber > 0">
            LIMIT #{courseLimitNumber}
        </if>
    </select>
    <!--新增课程-->
    <insert id="addCourse" parameterType="com.itcast.education.model.course.Course">
        INSERT INTO education_course (
            `course_id`,
            `course_name`,
            `tags`,
            `course_price`,
            `discount_price`,
            `sale_course`,
            `course_url`,
            `create_time`,
            `create_person` )
        VALUES (
            #{courseId},
            #{courseName},
            #{tags},
            #{coursePrice},
            #{discountPrice},
            #{saleCourse},
            #{courseUrl},
            #{createTime},
            #{createPerson})
    </insert>
    <update id="updateCourse" parameterType="com.itcast.education.model.course.Course">
        UPDATE education_course
        SET `course_name` = #{courseName},
            `tags` = #{tags},
            `course_price` = #{coursePrice},
            `discount_price` = #{discountPrice},
            `sale_course` = #{saleCourse},
            `course_url` = #{courseUrl},
            `update_time` = #{updateTime},
            `update_person` = #{updatePerson}
        WHERE 1=1
        <if test="courseId != null and courseId != ''">
            AND course_id = #{courseId}
        </if>
    </update>
</mapper>